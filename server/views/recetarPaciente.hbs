<head>
    <title>Home</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container">
		<br>
		<h1>Recetar paciente</h1>
		<hr>
       <div class="row">
		<div class="col-12">
			<form action="http://localhost:3000/receta" method = "post">
				<div class="form-group">
					<label>N.o de seguro del paciente</label>
                    <input class="form-control" type="text" placeholder="No. de Seguro Paciente" name="nombrePaciente">
				</div>
				<div class="form-group">
					<label>Nombre del Doctor</label>
                    <input class="form-control" type="text" placeholder="Doctor" name="nombreMedico">
				</div>
				<div class="form-group">
					<label>Padecimiento</label>
                    <input class="form-control" type="text" placeholder="Padecimiento" name="padecimiento"  >
				</div>
                <div class="form-group">
					<label>Diagnostico</label>
                    <input class="form-control" type="text" placeholder="Diagnostico" name="diagnostico"  >
				</div>
                <div class="form-group">
					<label>Tratamiento</label>
                    <input class="form-control" type="text" placeholder="Tratamiento" name="tratamiento"  >
				</div>
                <div class="form-group">
					<label>Analisis</label>
                    <input class="form-control" type="text" placeholder="Analisis" name="analisis"  >				
                </div>
                <div class="form-group">
					<label>Resultados</label>
                    <input class="form-control" type="text" placeholder="Resultados" name="resultadoAnalisis"  >
                </div>
                <div class="form-group">
					<label>Medicamento</label>
                    <input class="form-control" type="text" placeholder="Medicamento" name="medicamento"  >
                </div>
                <div class="form-group">
					<label>Cedula</label>
                    <input class="btn-frontend-input-signin" type="text" placeholder="Cedula" name="cedula">
                </div>
				<div class="form-check">
    				<input type="submit" name="Guardar" class="btn btn-primary">
          		</div>
			</form>
			{{#if message}}
            	<span class="alert alert-danger">{{message}}</span>
          	{{/if}}

			{{#if succ}}
            	<span class="alert alert-success">{{succ}}</span>
          	{{/if}}
          	<br><br>
		</div>
	   </div>
    </div>
</body>